<div id="<%= dom_id payment %>">
  <p>
    <strong>Name:</strong>
    <%= payment.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= payment.amount %>
  </p>

  <div>
    <strong>Categories:</strong>
    <% payment.categories.each do |category| %>
      <p><%= category.name %></p>
    <% end %>
  </div>

</div>
